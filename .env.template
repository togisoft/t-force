# T-Force Production Environment Configuration
# Copy this file to .env.production and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=tforce_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=tforce
DATABASE_URL=postgres://tforce_user:your_secure_password_here@db:5432/tforce

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8080
RUST_LOG=info

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars
JWT_SECRET=your_jwt_secret_here_min_32_chars
CORS_ORIGIN=https://yourdomain.com

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXTAUTH_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/ws

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_PASSWORD=your_grafana_password

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
# These are set in docker-compose.prod.yml but can be overridden here
# BACKEND_MEMORY_LIMIT=512M
# FRONTEND_MEMORY_LIMIT=512M
# DB_MEMORY_LIMIT=1G
# REDIS_MEMORY_LIMIT=256M

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Security headers are configured in Traefik middleware
# See monitoring/traefik/middleware.yml for details

# =============================================================================
# HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3